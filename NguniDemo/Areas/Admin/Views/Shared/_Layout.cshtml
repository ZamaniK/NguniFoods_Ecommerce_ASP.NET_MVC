<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <title>@ViewBag.Title - Nguni Dashboard</title>

    <link href="~/Areas/Admin/Content/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/styles.css" rel="stylesheet" />
    <link href="~/Content/vendor/fontawesome-free/css/all.min.css" rel="stylesheet" />
    <script src="~/Areas/Admin/Content/vendor/jquery/jquery.min.js"></script>
    <script src="https://kit.fontawesome.com/6831f52cbb.js" crossorigin="anonymous"></script>
    <link href="~/Content/vendor/fontawesome-free/css/all.min.css" rel="stylesheet" />
    <link href="https://cdn.datatables.net/1.10.20/css/dataTables.bootstrap4.min.css" rel="stylesheet" crossorigin="anonymous" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.1/js/all.min.js" crossorigin="anonymous"></script>
</head>
<body class="sb-nav-fixed">
    <nav class="sb-topnav navbar navbar-expand navbar-default bg-light">
        <a class="navbar-brand" href="@Url.Action("Index","Home",new { area = "" })">Nguni</a>


        <button class="btn btn-link btn-sm order-1 order-lg-0" id="sidebarToggle" href="#"><i class="fas fa-bars"></i></button>
        <!-- Navbar Search-->
        <form class="d-none d-md-inline-block form-inline ml-auto mr-0 mr-md-3 my-2 my-md-0">
            <div class="input-group">
                <input class="form-control" type="text" placeholder="Search for..." aria-label="Search" aria-describedby="basic-addon2" />
                <div class="input-group-addon">
                    <button class="btn btn-primary" type="button"><i class="fas fa-search"></i></button>
                </div>
            </div>
        </form>
        <!-- Navbar-->
        @using Microsoft.AspNet.Identity

        <!-- Navbar-->

        <ul class="navbar-nav ml-auto ml-md-0">
            @if (Request.IsAuthenticated)
            {


                <li class="nav-item dropdown">
                    <a class="dropdown-item" href="javascript:document.getElementById('logoutForm').submit()">
                        <i class="fas fa-sign-out-alt"></i>
                        Logout
                    </a>

                </li>

            }
            else
            {

                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" id="userDropdown" href="#" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"><i class="fas fa-user fa-fw"></i> @User.Identity.GetUserName()</a>
                    <div class="dropdown-menu dropdown-menu-right" aria-labelledby="userDropdown">

                        <div class="dropdown-divider"></div>
                        <a class="dropdown-item" href="login.html">Logout</a>
                    </div>
                </li>

            }
        </ul>

    </nav>
    <div id="layoutSidenav">
        <div id="layoutSidenav_nav">
            <nav class="sb-sidenav accordion sb-sidenav-light" id="sidenavAccordion">
                <div class="sb-sidenav-menu">
                    <div class="nav">
                        <div class="sb-sidenav-menu-heading">Core</div>
                        <a class="nav-link" <a href="@Url.Action("Index", "AdminDashboard")">
                            <div class="sb-nav-link-icon"><i class="fas fa-tachometer-alt"></i></div>
                            Dashboard
                        </a>
                        <div class="sb-sidenav-menu-heading">Interface</div>
                        <a class="nav-link collapsed" href="#" data-toggle="collapse" data-target="#collapseLayouts" aria-expanded="false" aria-controls="collapseLayouts">
                            <div class="sb-nav-link-icon"><i class="fas fa fa-cog"></i></div>
                            Users & Roles
                            <div class="sb-sidenav-collapse-arrow"><i class="fas fa-angle-down"></i></div>
                        </a>
                        <div class="collapse" id="collapseLayouts" aria-labelledby="headingOne" data-parent="#sidenavAccordion">
                            <nav class="sb-sidenav-menu-nested nav">
                                <a href="@Url.Action("Index", "Users")" class="nav-link">
                                    <i class="fas fa-users mr-1"></i> Users
                                </a>

                            </nav>
                        </div>
                        <a class="nav-link collapsed" href="#" data-toggle="collapse" data-target="#collapsePages" aria-expanded="false" aria-controls="collapsePages">
                            <div class="sb-nav-link-icon"><i class="fa fa-store"></i></div>
                            Shop
                            <div class="sb-sidenav-collapse-arrow"><i class="fas fa-angle-down"></i></div>

                        </a>
                        <div class="collapse" id="collapsePages" aria-labelledby="headingTwo" data-parent="#sidenavAccordion">
                            <nav class="sb-sidenav-menu-nested nav accordion" id="sidenavAccordionPages">


                                <a class="nav-link" href="@Url.Action("Index", "ManageFood")">
                                    <i class="fas fa-columns"></i>
                                    Food Type
                                </a>

                                <a class="nav-link" href="@Url.Action("Index", "TableType")">
                                    <i class="fas fa-table"></i>
                                    Table Type
                                </a>
                                <a class="nav-link" href="@Url.Action("Index", "ManageFoodItems")">
                                    <i class="fa fa-product"></i>
                                    Products
                                </a>
                                <a class="nav-link" href="@Url.Action("Index", "Tables")">
                                    <i class="fa fa-table"></i>
                                    Tables
                                </a>

                                <a class="nav-link" href="@Url.Action("Index1", "AdminVenueTime")">
                                    <i class="fas fa-clock mr-1"></i>
                                    Venue Time
                                </a><a class="nav-link" href="@Url.Action("Index", "AdminVenueTimes")">
                                    <i class="fas fa-calendar-alt mr-1"></i>
                                    Venue Available
                                </a> <a class="nav-link " href="@Url.Action("Orders", "ManageFood")">
                                    <i class="fas fa-shopping-cart"></i>
                                    Orders
                                </a>
                                <a class="nav-link" href="@Url.Action("TableBookings", "AdminDashboard")">
                                    <i class="fa fa-chair"></i>
                                    Reservations
                                </a>
                                <a class="nav-link" href="@Url.Action("VenueBookings", "AdminDashboard")">
                                    <i class="fa fa-building"></i>
                                    Venue Bookings
                                </a>

                            </nav>
                        </div>
                        @using Microsoft.AspNet.Identity
                        @if (Request.IsAuthenticated)
                        {
                            <div class="sb-sidenav-menu-heading">Exit to Home</div>
                            <a class="nav-link" href="@Url.Action("Index","Home",new { area = "" })" alt="">
                                <div class="sb-nav-link-icon"><i class="fas fa-home"></i></div>
                                Nguni Traditional
                            </a>

                        }
                        else
                        {
                            <div class="sb-sidenav-menu-heading">Login</div>

                            <a class="nav-link" href="/Account/Login"><div class="sb-nav-link-icon"><i class="fa fa-user-circle"></i> </div>Login</a>
                            <a class="nav-link" href="/Account/Register"><div class="sb-nav-link-icon"><i class="fa fa-pen"></i></div> Register</a>

                        }
                    </div>

                </div>
                <div class="sb-sidenav-footer">
                    <div class="small">
                        <i>GRP49</i> &copy; AmaJongo&trade;  @DateTime.Now.Year
                    </div>
                </div>
            </nav>
        </div>

        <div id="layoutSidenav_content">
            <main>
                <div class="container-fluid">
                    @RenderBody()

                </div>
            </main>
        </div>

    </div>

    @using (Html.BeginForm("LogOff", "Account", new { area = "" }, FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
        @Html.AntiForgeryToken()
    }
    <script src="~/Areas/Admin/Content/vendor/jquery/jquery.min.js"></script>
    <script src="~/Areas/Admin/Content/vendor/bootstrap/js/bootstrap.min.js"></script>
    <script src="~/Areas/Admin/Content/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/js/bootstrap.bundle.min.js" crossorigin="anonymous"></script>
    @Scripts.Render("~/bundles/jquery")
    @RenderSection("scripts", required: false)
</body>
</html>