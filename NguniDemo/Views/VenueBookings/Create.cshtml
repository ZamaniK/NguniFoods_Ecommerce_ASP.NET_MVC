@model NguniDemo.Models.VenueBooking

<div class="container">
    @{
        ViewBag.Title = "Create";
        var message = TempData["AlertMessage"] ?? string.Empty;
    }
    <script>
    var msg = '@message';
    if (msg)
        alert(msg);
    </script>

    <h2></h2>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <h4>Venue Booking</h4>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <input type="hidden" readonly value="@ViewBag.Id" class="form-control" name="RoomId" />



            <div class="form-group">
                @Html.LabelFor(model => model.ArrivalDate, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.ArrivalDate, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.ArrivalDate, "", new { @class = "text-danger" })
                </div>
            </div>
 

            <div class="form-group">
                @Html.LabelFor(model => model.numOfPeople, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.numOfPeople, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.numOfPeople, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Book" class="btn btn-default" />
                </div>
            </div>
        </div>
    }

    <div>
        @Html.ActionLink("Back to List", "Index")
    </div>
</div>