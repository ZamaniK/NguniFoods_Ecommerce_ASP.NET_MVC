<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Nguni Traditional Restuarant</title>
    @*  @Styles.Render("~/Content/css")
        @Scripts.Render("~/bundles/modernizr") *@

    <script src="https://kit.fontawesome.com/6831f52cbb.js" crossorigin="anonymous"></script>
    <script src="https://www.flaticon.com" crossorigin="anonymous"></script>

    <link href="~/Content/vendor/fontawesome-free/css/all.min.css" rel="stylesheet" />
    <link href="~/vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">

    <!-- Owl Carousel -->
    <!-- Date Picker -->
    <!-- Flaticons  -->

    <link href="~/fonts/flaticon/font/flaticon.css" rel="stylesheet" />
    <!-- Animate.css -->
    <link rel="stylesheet" href="~/Content/animate.css">
    <!-- Icomoon Icon Fonts-->
    <link rel="stylesheet" href="~/Content/icomoon.css">
    <!-- Bootstrap  -->
    <link rel="stylesheet" href="~/Content/bootstrap.css">
    <link href="~/Content/style.css" rel="stylesheet" />
    <!-- Magnific Popup -->
    <link rel="stylesheet" href="~/Content/magnific-popup.css">

    <!-- Flexslider  -->
    <link rel="stylesheet" href="~/Content/flexslider.css">
    <!-- Theme style  -->
    <link rel="stylesheet" href="~/Content/style.css">

    <!-- Modernizr JS -->
    <script src="~/Scripts/modernizr-2.6.2.min.js"></script>
    <!-- Owl Carousel -->
    <link href="~/Content/owl.carousel.min.css" rel="stylesheet" />
    <link href="~/Content/owl.theme.default.min.css" rel="stylesheet" />


</head>
<body>

        <div class="navbar navbar-default navbar-fixed-top">
            <div class="container">
                <div class="col-xs-2">
                    <div id="colorlib-logo">
                        <img src="~/Content/images/NguniLogo.png" alt="Logo" style="height:60px; width:80px; padding-right:10px;" />

                    </div>
                </div>
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                </div>
                <div class="navbar-collapse collapse">
                    <ul class="nav navbar-nav">
                        <li>
                            <a  href="@Url.Action("Index","Home")" alt="">
                                <i class="fas fa-store"></i> Home
                            </a>
                        </li>                        
                        <li><a  href="@Url.Action("Index","VenueTimers")" alt="">
                        <i class="fas fa-building"></i> Venues
                                                            </a></li>
                        <li>
                            <a  href="@Url.Action("Index2","VenueBookings")" alt="">
                                <i class="fas fa-list"></i> Bookings
                            </a>
                        </li>

                    </ul>
                    <ul class="nav navbar-nav">
                        @Html.Partial("_LoginPartial")
                    </ul>


                    <span class="mr-2 d-none d-lg-inline text-gray-600"></span>

                    @if (Request.IsAuthenticated && User.IsInRole("Admin"))
                    {
                        <ul class="navbar-collapse collapse navbar-right" style="list-style-type: none; }">
                            <li>
                                <a class="navbar-brand" href="@Url.Action("Index","Users",new { area = "Admin" })" alt="">
                                    <i class="fas fa-fw fa-tachometer-alt"></i> Admin Dashboard
                                </a>
                            </li>
                        </ul>
                    }
                    else
                    {
                        if (ViewBag.Title != "Cart Details")
                        {
                            <ul class="navbar-collapse collapse navbar-right">
                                @Html.Action("CartPartial", "Cart")

                            </ul>
                        }
                    }

                </div>
            </div>
        </div>
        
        <div id="page">
            <p></p>

            @RenderBody()

            <footer>
                <div class="row" style="background-color:white; padding-top:5px;">
                    <br />
                    <div class="container">

                        <div class="well well-sm" style="text-align:center;">
                            <i>GRP49</i> &copy; AmaJongo&trade;  @DateTime.Now.Year
                        </div>
                    </div>

                </div>
            </footer>

        </div>


        <div class="gototop js-top">
            <a href="#" class="js-gotop"><i class="icon-arrow-up2"></i></a>
        </div>

        <!-- jQuery -->
        <script src="~/Scripts/jquery.min.js"></script>
        <!-- jQuery Easing -->
        <script src="~/Scripts/jquery.easing.1.3.js"></script>
        <!-- Bootstrap -->
        <script src="~/Scripts/bootstrap.min.js"></script>
        <!-- Waypoints -->
        <script src="~/Scripts/jquery.waypoints.min.js"></script>
        <!-- Flexslider -->
        <script src="~/Scripts/jquery.flexslider-min.js"></script>
        <!-- Owl carousel -->
        <script src="~/Scripts/owl.carousel.min.js"></script>
        <!-- Magnific Popup -->
        <script src="~/Scripts/jquery.magnific-popup.min.js"></script>
        <script src="~/Scripts/magnific-popup-options.js"></script>
        <!-- Date Picker -->
        <script src="~/Scripts/bootstrap-datepicker.js"></script>
        <!-- Main -->
        <script src="~/Scripts/main.js"></script>

        @*@Scripts.Render("~/bundles/jquery")*@
        @Scripts.Render("~/bundles/bootstrap")
        @RenderSection("scripts", required: false)
</body>
</html>
