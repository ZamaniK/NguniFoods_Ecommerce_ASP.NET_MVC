@model IEnumerable<NguniDemo.Models.VenueTime>

@{
    ViewBag.Title = "Index";
}

<div class="container">
    <h2>Index</h2>

    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Venues.VenueName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.VenueTimes.VenueTimesId)
            </th>
            <th>Book Venue</th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Venues.VenueName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.VenueTimes.SlotTime)
                </td>
                <td>
                    <a href="@Url.Action("VenueBooking","VenueTimers", new { id=item.VenueTimeId })" rel="tooltip" title="View" class="btn btn-info btn-simple btn-xs"><i class="fa fa-address-book"></i>Book Venue</a>
                </td>
            </tr>
        }

    </table>
</div>